---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  imgSrc: string;
  imgAlt: string;
  url: string;
}

const { title, pubDate, url } = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
});
---

<a href={url} class="group block py-3 border-b border-neutral-800/50">
  <div class="flex items-baseline justify-between gap-4">
    <h3 class="text-sm text-neutral-400 group-hover:text-neutral-200 transition-colors line-clamp-1">
      {title}
    </h3>
    <time class="text-xs text-neutral-600 shrink-0">{formattedDate}</time>
  </div>
</a>

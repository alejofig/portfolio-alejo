---
const events = [
  {
    year: '2025',
    title: 'AWS Summit Bogotá',
    note: 'Building AI-ready APIs and AWS service integration',
  },
  {
    year: '2025',
    title: 'AWS Student Community Day, Medellín',
    note: 'MCP on AWS for seamless AI integration',
  },
  {
    year: '2025',
    title: 'AWS Community Day Colombia',
    note: 'Technical sessions for developers',
  },
  {
    year: '2025',
    title: 'AWS User Group Medellín',
    note: 'Daily Expenses: Serverless with AWS and Amazon Bedrock',
    link: 'https://www.youtube.com/watch?v=xUc_AFIrV7k',
  },
  {
    year: '2024',
    title: 'AWS Summit Bogotá',
    note: 'Serverless architectures and orchestration on AWS',
  },
  {
    year: '2023',
    title: 'Profesor — "De la Tierra a la Nube", Medellín',
    note: 'Cloud architecture fundamentals and AWS for software students',
  },
];
---

<section class="reveal">
  <h2 class="text-xs font-medium uppercase tracking-widest text-neutral-600 mb-6">Speaking</h2>
  <div class="flex flex-col gap-4">
    {events.map((event) => (
      <div class="flex gap-4 items-baseline">
        <span class="text-xs text-neutral-600 tabular-nums shrink-0 w-10">{event.year}</span>
        <div>
          <p class="text-sm text-neutral-300">{event.title}</p>
          {event.note && !event.link && <p class="text-xs text-neutral-600 mt-0.5">{event.note}</p>}
          {event.note && event.link && (
            <a href={event.link} target="_blank" rel="noopener noreferrer" class="text-xs text-neutral-600 hover:text-neutral-400 transition-colors mt-0.5 inline-block">
              {event.note} &rarr;
            </a>
          )}
        </div>
      </div>
    ))}
  </div>
</section>
